<div class="container">
  <ul>
    <% @articles.each do |article| %>
      <%= link_to article_path(article) do %>
        <li>
          <div class="card-product">
            <img src="https://source.unsplash.com/random" />
            <div class="card-product-infos">
              <h2><%= article.title %></h2>
              <p><%= article.content %></p>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
